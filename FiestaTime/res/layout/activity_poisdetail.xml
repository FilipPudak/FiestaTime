<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/poidetails_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="#333333"
            android:textSize="24sp" />
        
         <TextView
                android:id="@+id/poidetails_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/poidetails_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/films_detail_image_descr"
            android:padding="20dp" />

        <LinearLayout
            android:id="@+id/poidetails_map"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/grey_selectable_background"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:contentDescription="@string/pois_detail_show_on_map"
                android:padding="8dp"
                android:src="@drawable/actionbar_map" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="#ffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/pois_detail_show_on_map"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/poidetails_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingLeft="20dip"
                android:paddingTop="2dip"
                android:text="@string/films_detail_description"
                android:textColor="#e3353d" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>